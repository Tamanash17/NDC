{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test Credentials Configuration",
  "description": "Test credentials for NDC API integration - UAT ONLY",
  "type": "object",
  "properties": {
    "testCredentials": {
      "type": "object",
      "properties": {
        "direct": {
          "$ref": "#/definitions/credential"
        },
        "bob": {
          "$ref": "#/definitions/credential"
        }
      },
      "required": ["direct", "bob"]
    },
    "warning": {
      "type": "string"
    }
  },
  "required": ["testCredentials", "warning"],
  "definitions": {
    "credential": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string",
          "description": "Human-readable label for this credential set"
        },
        "domain": {
          "type": "string",
          "description": "Domain (e.g., EXT)"
        },
        "apiId": {
          "type": "string",
          "description": "API User ID / Organization ID"
        },
        "password": {
          "type": "string",
          "description": "API password"
        },
        "subscriptionKey": {
          "type": "string",
          "description": "Ocp-Apim-Subscription-Key"
        },
        "environment": {
          "type": "string",
          "enum": ["UAT", "PROD"],
          "description": "Environment (UAT only for test credentials)"
        },
        "orgCode": {
          "type": "string",
          "description": "Organization code for distribution chain (may differ from API ID)"
        },
        "orgName": {
          "type": "string",
          "description": "Organization name for distribution chain XML"
        }
      },
      "required": ["label", "domain", "apiId", "password", "subscriptionKey", "environment"]
    }
  }
}
